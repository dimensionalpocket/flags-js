{
  "name": "@dimensionalpocket/flags",
  "version": "0.1.0",
  "description": "Bitwise flag management for Javascript",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npm run lint && NODE_ENV=test c8 mocha",
    "lint": "standardx --fix --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimensionalpocket/flags-js.git"
  },
  "author": "dimensionalpocket.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dimensionalpocket/flags-js/issues"
  },
  "homepage": "https://github.com/dimensionalpocket/flags-js#readme",
  "dependencies": {},
  "devDependencies": {
    "@dimensionalpocket/development": "github:dimensionalpocket/development-js#1.0.2"
  },
  "babel": {
    "extends": "./node_modules/@dimensionalpocket/development/babel"
  },
  "eslintConfig": {
    "extends": "./node_modules/@dimensionalpocket/development/eslint"
  },
  "mocha": {
    "recursive": true,
    "reporter": "dot",
    "colors": true
  },
  "c8": {
    "extends": "./node_modules/@dimensionalpocket/development/c8/default.json",
    "include": [
      "index.js",
      "src"
    ]
  },
  "engines": {
    "node": ">= 16.14.2"
  }
}
